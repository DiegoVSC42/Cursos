
public class EstruturaRepeticaoCondicional {
	public static void main(String[] args) {
		
		int i = 0;
		int numeroMaximo = 1000;
		while(i <= numeroMaximo){
			System.out.print(" " + i);
			i = i + 2;
		}
		
		do {
			System.out.print(" " + i);
			i = i + 2;
			
		}while(i <= numeroMaximo);
		
	}
}
